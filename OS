#include<iostream>
using namespace std;

void firstFit(int blocks[], int m, int procs[], int n, int alloc[]) {
    for(int i = 0; i < n; i++) {
        alloc[i] = -1;
        for(int j = 0; j < m; j++) {
            if(blocks[j] >= procs[i]) {
                alloc[i] = j;
                blocks[j] -= procs[i];
                break;
            }
        }
    }
}

void bestFit(int blocks[], int m, int procs[], int n, int alloc[]) {
    for(int i = 0; i < n; i++) {
        alloc[i] = -1;
        int best = -1;
        
        for(int j = 0; j < m; j++) {
            if(blocks[j] >= procs[i]) {
                if(best == -1 || blocks[j] < blocks[best]) {
                    best = j;
                }
            }
        }
        
        if(best != -1) {
            alloc[i] = best;
            blocks[best] -= procs[i];
        }
    }
}

void worstFit(int blocks[], int m, int procs[], int n, int alloc[]) {
    for(int i = 0; i < n; i++) {
        alloc[i] = -1;
        int worst = -1;
        
        for(int j = 0; j < m; j++) {
            if(blocks[j] >= procs[i]) {
                if(worst == -1 || blocks[j] > blocks[worst]) {
                    worst = j;
                }
            }
        }
        
        if(worst != -1) {
            alloc[i] = worst;
            blocks[worst] -= procs[i];
        }
    }
}

void print(int alloc[], int procs[], int n) {
    cout << "Process\tSize\tBlock\n";
    for(int i = 0; i < n; i++) {
        cout << i+1 << "\t\t" << procs[i] << "\t\t";
        if(alloc[i] != -1) 
            cout << alloc[i] + 1;
        else 
            cout << "Not Allocated";
        cout << endl;
    }
}

int main() {
    int m, n;
    
    cout << "Enter number of memory blocks: ";
    cin >> m;
    int blocks[m];
    
    cout << "Enter block sizes: ";
    for(int i = 0; i < m; i++) 
        cin >> blocks[i];
    
    cout << "Enter number of processes: ";
    cin >> n;
    int procs[n];
    
    cout << "Enter process sizes: ";
    for(int i = 0; i < n; i++) 
        cin >> procs[i];
    
    int blocks1[m], blocks2[m], blocks3[m];
    int alloc1[n], alloc2[n], alloc3[n];
    
    for(int i = 0; i < m; i++) {
        blocks1[i] = blocks2[i] = blocks3[i] = blocks[i];
    }
    
    firstFit(blocks1, m, procs, n, alloc1);
    cout << "\nFirst Fit:\n"; 
    print(alloc1,procs, n);
    
    bestFit(blocks2, m, procs, n, alloc2);
    cout << "\nBest Fit:\n"; 
    print(alloc2, procs, n);
    
    worstFit(blocks3, m, procs, n, alloc3);
    cout << "\nWorst Fit:\n"; 
    print(alloc3, procs, n);
    
    return 0;
}
int main() {
    int m, n;
    
    // Input memory blocks
    cout << "Enter number of memory blocks: ";
    cin >> m;
    int blocks[m];
    
    cout << "Enter block sizes: ";
    for(int i = 0; i < m; i++) 
        cin >> blocks[i];
    
    // Input processes  
    cout << "Enter number of processes: ";
    cin >> n;
    int procs[n];
    
    cout << "Enter process sizes: ";
    for(int i = 0; i < n; i++) 
        cin >> procs[i];
    
    // Create copies for each algorithm
    int blocks1[m], blocks2[m], blocks3[m];
    int alloc1[n], alloc2[n], alloc3[n];
    
    for(int i = 0; i < m; i++) {
        blocks1[i] = blocks2[i] = blocks3[i] = blocks[i];
    }
    
    // Run and display all algorithms
    firstFit(blocks1, m, procs, n, alloc1);
    cout << "\nFirst Fit:\n"; 
    print(alloc1, procs, n);
    
    bestFit(blocks2, m, procs, n, alloc2);
    cout << "\nBest Fit:\n"; 
    print(alloc2, procs, n);
    
    worstFit(blocks3, m, procs, n, alloc3);
    cout << "\nWorst Fit:\n"; 
    print(alloc3, procs, n);
    
    return 0;
}




















#include <iostream>
#include <climits>
using namespace std;

struct Process {
    int id;
    int arrival_time;
    int burst_time;
    int remaining_time;
    int completion_time;
    int turnaround_time;
    int waiting_time;
};

void srtf(Process p[], int n) {
    int time = 0, completed = 0;
    bool done[100] = {false};

    while (completed < n) {
        int idx = -1;
        int mn = INT_MAX;

        for (int i = 0; i < n; i++) {
            if (p[i].arrival_time <= time && !done[i] && p[i].remaining_time > 0) {
                if (p[i].remaining_time < mn) {
                    mn = p[i].remaining_time;
                    idx = i;
                }
            }
        }

        if (idx != -1) {
            p[idx].remaining_time--;
            time++;

            if (p[idx].remaining_time == 0) {
                done[idx] = true;
                completed++;

                p[idx].completion_time = time;
                p[idx].turnaround_time = p[idx].completion_time - p[idx].arrival_time;
                p[idx].waiting_time = p[idx].turnaround_time - p[idx].burst_time;
            }
        } else {
            time++; // idle CPU
        }
    }
    cout << "\nProcess\tAT\tBT\tCT\tTAT\tWT\n";
    double totalWT = 0, totalTAT = 0;

    for (int i = 0; i < n; i++) {
        cout << "P" << p[i].id << "\t" 
             << p[i].arrival_time << "\t"
             << p[i].burst_time << "\t"
             << p[i].completion_time << "\t"
             << p[i].turnaround_time << "\t"
             << p[i].waiting_time << "\n";

        totalWT += p[i].waiting_time;
        totalTAT += p[i].turnaround_time;
    }

    cout << "\nAverage Waiting Time     = " << totalWT / n;
    cout << "\nAverage Turnaround Time  = " << totalTAT / n << "\n";
}

int main() {
    int n;
    cout << "Enter number of processes: ";
    cin >> n;

    Process p[100];

    for (int i = 0; i < n; i++) {
        p[i].id = i + 1;
        cout << "\nEnter arrival time of P" << i+1 << ": ";
        cin >> p[i].arrival_time;
        cout << "Enter burst time of P" << i+1 << ": ";
        cin >> p[i].burst_time;
        p[i].remaining_time = p[i].burst_time;
    }

    srtf(p, n);
    return 0;
}















#include <iostream>
using namespace std;

struct Process {
    int id;
    int arrival;
    int burst;
    int priority;
    int completion;
    int waiting;
    int turnaround;
};

int main() {
    int n;
    cout << "Enter number of processes: ";
    cin >> n;
    
    Process p[n];
    
    for(int i = 0; i < n; i++) {
        p[i].id = i + 1;
        cout << "Enter arrival time, burst time and priority for P" << p[i].id << ": ";
        cin >> p[i].arrival >> p[i].burst >> p[i].priority;
    }
    
    int currentTime = 0;
    int completed = 0;
    bool executed[n] = {false};
    
    while(completed < n) {
        int highestPriority = -1;
        int highestPriorityValue = 1000000; 
        
        for(int i = 0; i < n; i++) {
            if(!executed[i] && p[i].arrival <= currentTime && p[i].priority < highestPriorityValue) {
                highestPriority = i;
                highestPriorityValue = p[i].priority;
            }
        }
        
        if(highestPriority == -1) {
            currentTime++;
            continue;
        }
        
        p[highestPriority].completion = currentTime + p[highestPriority].burst;
        p[highestPriority].waiting = currentTime - p[highestPriority].arrival;
        p[highestPriority].turnaround = p[highestPriority].completion - p[highestPriority].arrival;
        
        currentTime = p[highestPriority].completion;
        executed[highestPriority] = true;
        completed++;
    }
    
    cout << "\nProcess\tArrival\tBurst\tPriority\tCompletion\tWaiting\tTurnaround\n";
    float total_wait = 0, total_tat = 0;
    for(int i = 0; i < n; i++) {
        cout << "P" << p[i].id << "\t\t" << p[i].arrival << "\t\t" << p[i].burst << "\t\t" 
             << p[i].priority << "\t\t\t" << p[i].completion << "\t\t\t" 
             << p[i].waiting << "\t\t" << p[i].turnaround << endl;
        total_wait += p[i].waiting;
        total_tat += p[i].turnaround;
    }
    
    cout << "\nAverage Waiting Time: " << total_wait / n << endl;
    cout << "Average Turnaround Time: " << total_tat / n << endl;
    
    return 0;
}








































#include <iostream>
using namespace std;

struct Process {
    int id;
    int arrival;
    int burst;
    int completion;
    int waiting;
    int turnaround;
};

int main() {
    int n;
    cout << "Enter number of processes: ";
    cin >> n;
    
    Process p[n];
    
    for(int i = 0; i < n; i++) {
        p[i].id = i + 1;
        cout << "Enter arrival time and burst time for P" << p[i].id << ": ";
        cin >> p[i].arrival >> p[i].burst;
    }
    
    for(int i = 0; i < n-1; i++) {
        for(int j = 0; j < n-i-1; j++) {
            if(p[j].arrival > p[j+1].arrival) {
                Process temp = p[j];
                p[j] = p[j+1];
                p[j+1] = temp;
            }
        }
    }
    
    int currentTime = 0;
    int completed = 0;
    bool executed[n] = {false};
    
    while(completed < n) {
        int shortest = -1;
        int shortestBurst = 1000000; 
        
        for(int i = 0; i < n; i++) {
            if(!executed[i] && p[i].arrival <= currentTime && p[i].burst < shortestBurst) {
                shortest = i;
                shortestBurst = p[i].burst;
            }
        }
        
        if(shortest == -1) {
            currentTime++;
            continue;
        }
        
        p[shortest].completion = currentTime + p[shortest].burst;
        p[shortest].waiting = currentTime - p[shortest].arrival;
        p[shortest].turnaround = p[shortest].completion - p[shortest].arrival;
        
        currentTime = p[shortest].completion;
        executed[shortest] = true;
        completed++;
    }
    
    cout << "\nProcess\tArrival\tBurst\tCompletion\tWaiting\tTurnaround\n";
    float total_wait = 0, total_tat = 0;
    for(int i = 0; i < n; i++) {
        cout << "P" << p[i].id << "\t\t" << p[i].arrival << "\t\t" << p[i].burst << "\t\t" 
             << p[i].completion << "\t\t\t" << p[i].waiting << "\t\t" << p[i].turnaround << endl;
        total_wait += p[i].waiting;
        total_tat += p[i].turnaround;
    }
    
    cout << "\nAverage Waiting Time: " << total_wait / n << endl;
    cout << "Average Turnaround Time: " << total_tat / n << endl;
    
    return 0;
}







































#include <iostream>
using namespace std;

struct Process {
    int id;
    int arrival;
    int burst;
    int completion;
    int waiting;
    int turnaround;
};

int main() {
    int n;
    cout << "Enter number of processes: ";
    cin >> n;
    
    Process p[n];
    
    for(int i = 0; i < n; i++) {
        p[i].id = i + 1;
        cout << "Enter arrival time and burst time for P" << p[i].id << ": ";
        cin >> p[i].arrival >> p[i].burst;
    }
    
    for(int i = 0; i < n-1; i++) {
        for(int j = 0; j < n-i-1; j++) {
            if(p[j].arrival > p[j+1].arrival) {
                Process temp = p[j];
                p[j] = p[j+1];
                p[j+1] = temp;
            }
        }
    }
    
    p[0].completion = p[0].arrival + p[0].burst;
    p[0].waiting = 0;
    p[0].turnaround = p[0].burst;
    
    for(int i = 1; i < n; i++) {
        if(p[i].arrival > p[i-1].completion) {
            p[i].completion = p[i].arrival + p[i].burst;
        } else {
            p[i].completion = p[i-1].completion + p[i].burst;
        }
        p[i].waiting = p[i].completion - p[i].arrival - p[i].burst;
        p[i].turnaround = p[i].completion - p[i].arrival;
    }
    
    cout << "\nProcess\tArrival\tBurst\tCompletion\tWaiting\tTurnaround\n";
    float total_wait = 0, total_tat = 0;
    for(int i = 0; i < n; i++) {
        cout << "P" << p[i].id << "\t\t" << p[i].arrival << "\t\t" << p[i].burst << "\t\t" 
             << p[i].completion << "\t\t\t" << p[i].waiting << "\t\t" << p[i].turnaround << endl;
        total_wait += p[i].waiting;
        total_tat += p[i].turnaround;
    }
    
    cout << "\nAverage Waiting Time: " << total_wait / n << endl;
    cout << "Average Turnaround Time: " << total_tat / n << endl;
    
    return 0;
}




































#include <iostream>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
using namespace std;

int main() {
    char source[100], destination[100];
    cout << "Enter source file name: ";
    cin >> source;
    cout << "Enter destination file name: ";
    cin >> destination;

    // Open source file for reading
    int src_fd = open(source, O_RDONLY);
    if(src_fd == -1) {
        perror("Error opening source file");
        return 1;
    }

    // Open destination file for writing (create if doesn't exist)
    int dest_fd = open(destination, O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if(dest_fd == -1) {
        perror("Error opening destination file");
        close(src_fd);
        return 1;
    }

    // Copy file content
    char buffer[1024];
    ssize_t bytes_read;
    
    while((bytes_read = read(src_fd, buffer, sizeof(buffer))) > 0) {
        // Handle partial writes
        ssize_t bytes_written = 0;
        while(bytes_written < bytes_read) {
            ssize_t result = write(dest_fd, buffer + bytes_written, bytes_read - bytes_written);
            if(result == -1) {
                perror("Error writing to destination");
                close(src_fd);
                close(dest_fd);
                return 1;
            }
            bytes_written += result;
        }
    }

    if(bytes_read == -1) {
        perror("Error reading from source");
        close(src_fd);
        close(dest_fd);
        return 1;
    }

    // Close files
    if(close(src_fd) == -1) {
        perror("Error closing source file");
    }
    if(close(dest_fd) == -1) {
        perror("Error closing destination file");
    }

    cout << "File copied successfully!" << endl;
    return 0;
}




































#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main() {
    ifstream meminfo("/proc/meminfo");
    string line;
    
    cout << "Linux Kernel Memory Information\n";
    cout << "==============================\n";
    
    while(getline(meminfo, line)) {
        // Display key memory information
        if(line.find("MemTotal") == 0 || line.find("MemFree") == 0 || 
           line.find("MemAvailable") == 0 || line.find("Buffers") == 0 ||
           line.find("Cached") == 0 || line.find("SwapTotal") == 0 ||
           line.find("SwapFree") == 0) {
            cout << line << endl;
        }
    }
    
    meminfo.close();
    return 0;
}










































#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main() {
    // Get kernel version
    ifstream version("/proc/version");
    string kernel_info;
    if(getline(version, kernel_info)) {
        cout << "Kernel Version:\n";
        cout << "===============\n";
        cout << kernel_info << endl << endl;
    }
    version.close();

    // Get CPU information
    ifstream cpuinfo("/proc/cpuinfo");
    string line;
    
    cout << "CPU Information:\n";
    cout << "================\n";
    
    bool found_model = false;
    bool found_cores = false;
    
    while(getline(cpuinfo, line)) {
        // Display key CPU information
        if(line.find("model name") == 0 && !found_model) {
            cout << line << endl;
            found_model = true;
        }
        else if(line.find("cpu cores") == 0 && !found_cores) {
            cout << line << endl;
            found_cores = true;
        }
        else if(line.find("vendor_id") == 0) {
            cout << line << endl;
        }
        else if(line.find("cpu MHz") == 0) {
            cout << line << endl;
        }
        else if(line.find("cache size") == 0) {
            cout << line << endl;
        }
        
        // Stop after first processor (to avoid repetition in multi-core)
        if(line.find("processor") == 0 && line != "processor : 0") {
            break;
        }
    }
    
    cpuinfo.close();
    return 0;
}






















#include <iostream>
#include <unistd.h>
#include <sys/wait.h>
using namespace std;

int main() {
    pid_t pid = fork();
    
    if(pid < 0) {
        cerr << "Fork failed!" << endl;
        return 1;
    }
    
    // Both parent and child execute this same code
    cout << "Process " << getpid() << ": Executing same code" << endl;
    cout << "Process " << getpid() << ": Hello from same program!" << endl;
    
    if(pid > 0) {
        // Only parent waits
        wait(NULL);
    }
    
    return 0;
}






#include <iostream>
#include <unistd.h>
#include <sys/wait.h>
using namespace std;

int main() {
    pid_t pid = fork();
    
    if(pid < 0) {
        cerr << "Fork failed!" << endl;
        return 1;
    }
    else if(pid == 0) {
        // Child process - different code
        cout << "Child: I'm counting numbers!" << endl;
        for(int i = 1; i <= 5; i++) {
            cout << "Child: " << i << endl;
            sleep(1);
        }
        cout << "Child: Finished counting!" << endl;
    }
    else {
        // Parent process - different code  
        cout << "Parent: I'm doing calculations!" << endl;
        for(int i = 1; i <= 3; i++) {
            cout << "Parent: Calculation " << i * 10 << endl;
            sleep(2);
        }
        cout << "Parent: Finished calculations!" << endl;
        
        wait(NULL); // Parent waits for child
    }
    
    return 0;
}












#include <iostream>
#include <unistd.h>
#include <sys/wait.h>
using namespace std;

int main() {
    pid_t pid = fork();
    
    if(pid < 0) {
        cerr << "Fork failed!" << endl;
        return 1;
    }
    else if(pid == 0) {
        // Child executes different program
        cout << "Child: About to run 'ls' command" << endl;
        execlp("ls", "ls", "-l", NULL);
        
        // If exec fails
        perror("exec failed");
        return 1;
    }
    else {
        // Parent waits for child to finish
        cout << "Parent: Waiting for child to complete..." << endl;
        int status;
        wait(&status);
        
        if(WIFEXITED(status)) {
            cout << "Parent: Child finished with exit code: " << WEXITSTATUS(status) << endl;
        }
        cout << "Parent: Now I can terminate." << endl;
    }
    
    return 0;
}

